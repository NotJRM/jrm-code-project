(defun jrm-query-terminal ()
  (case (fquery
         (list
           ':choices '(((p "Portrait")       #\P)
                       ((l "Landscape")      #\L)
                       ((f "Fancy Landscape")#\F)
                       ((n "Leave it alone") #\END))
           ':fresh-line 't
           ':default-value 'f
           ':timeout (* 30. 60.)) ;30 seconds.
        "Screen type? ")
    (p (tv::portrait))
    (l (tv::landscape))
    (f (ignore-errors
         (make-system 'fancy-landscape :noconfirm)
         (tv::fancy-landscape)))
    (n nil)))

